<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tashfia.imlicitintentexample.SportsActivity">

    <Button
        android:id="@+id/btn_starsports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Star Sports" />

    <Button
        android:id="@+id/btn_tensports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_starsports"
        android:layout_alignRight="@+id/btn_starsports"
        android:layout_below="@+id/btn_starsports"
        android:layout_marginTop="122dp"
        android:text="Ten Sports" />
</RelativeLayout>
